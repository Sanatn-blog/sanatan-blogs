# Database
MONGODB_URI=mongodb://localhost:27017/sanatan-blogs
# For production: mongodb+srv://username:password@cluster.mongodb.net/sanatan-blogs

# JWT Secret (use a strong random string - you can generate one with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# NextAuth (if using NextAuth in future)
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Admin Configuration (remove defaults in production)
ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=use-a-strong-password-here

# Social Auth (optional - only if using social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id